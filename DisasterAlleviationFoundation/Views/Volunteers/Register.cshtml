@model DisasterAlleviationFoundation.Models.Volunteer
@{
    ViewData["Title"] = "Register as Volunteer";
}

<h2>Register as Volunteer</h2>

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Skills" class="form-label"></label>
        <input asp-for="Skills" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Availability" class="form-label"></label>
        <input asp-for="Availability" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
