@model IEnumerable<DisasterAlleviationFoundation.Models.Volunteer>
@{
    ViewData["Title"] = "Volunteers";
}

<h2>Registered Volunteers</h2>

<a href="/Volunteers/Register" class="btn btn-success mb-3">Register as Volunteer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Skills</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.Age</td>
                <td>@v.Skills</td>
                <td>@v.Availability</td>
            </tr>
        }
    </tbody>
</table>
