@model DisasterAlleviationFoundation.Models.Disaster
@{
    ViewData["Title"] = "Disaster Details";
}

<h1>Disaster Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Location</h6>
        <p class="card-text">@Model.Description</p>
        <p><strong>Severity:</strong> @Model.Severity</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Reported At:</strong> @Model.ReportedAt.ToString("yyyy-MM-dd HH:mm")</p>

        @if (!string.IsNullOrEmpty(Model.EvidenceFileName))
        {
            <p>
                <strong>Evidence:</strong>
                <a href="~/uploads/@Model.EvidenceFileName" target="_blank">View / Download File</a>
            </p>
        }
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.DisasterId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
