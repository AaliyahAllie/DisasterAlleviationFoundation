@model IEnumerable<DisasterAlleviationFoundation.Models.Disaster>

@{
    ViewData["Title"] = "Disaster Reports";
}

<h1>Disaster Reports</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Report New Disaster</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th>
            <th>Reported At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disaster in Model)
        {
            <tr>
                <td>@disaster.Name</td>
                <td>@disaster.Location</td>
                <td>@disaster.Description</td>
                <td>@disaster.ReportedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@disaster.DisasterId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@disaster.DisasterId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@disaster.DisasterId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
