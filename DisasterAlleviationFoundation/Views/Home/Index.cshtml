@model List<DisasterAlleviationFoundation.Models.VolunteerAssignment>
@{
    ViewData["Title"] = "Home";
}

<!-- Stats Cards -->
<div class="row text-center mb-5">
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100 bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Total Volunteers</h5>
                <p class="display-5">@ViewData["TotalVolunteers"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100 bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total Incidents</h5>
                <p class="display-5">@ViewData["TotalDisasters"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100 bg-warning text-dark">
            <div class="card-body">
                <h5 class="card-title">Total Donations</h5>
                <p class="display-5">@ViewData["TotalDonations"]</p>
            </div>
        </div>
    </div>
</div>

<!-- Hero Section -->
<div class="hero mb-5">
    <h1>Welcome to Disaster Alleviation</h1>
    <p class="lead">Helping communities respond to disasters efficiently, safely, and transparently.</p>
    <a href="/Disasters" class="btn btn-warning btn-lg me-2">Report a Disaster</a>
    <a href="/Donations" class="btn btn-light btn-lg">Donate Resources</a>
</div>

<!-- Feature Cards -->
<div class="row text-center mb-5">
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Disaster Reporting</h5>
                <p class="card-text">Submit real-time reports about disasters and emergencies in your area.</p>
                <a href="/Disasters" class="btn btn-primary">Report Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Donate Resources</h5>
                <p class="card-text">Contribute food, clothing, or medical supplies to affected communities.</p>
                <a href="/Donations" class="btn btn-primary">Donate Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Volunteer</h5>
                <p class="card-text">Sign up as a volunteer and help coordinate relief efforts effectively.</p>
                <a href="/Volunteers" class="btn btn-primary">Join Now</a>
            </div>
        </div>
    </div>
</div>

<!-- Volunteer Assignments Table -->
<h2 class="mt-5">Volunteer Assignments</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Volunteer</th>
                <th>Task</th>
                <th>Disaster</th>
                <th>Location</th>
                <th>Date Assigned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model)
            {
                <tr>
                    <td>@assignment.Volunteer?.Name</td>
                    <td>@assignment.TaskDescription</td>
                    <td>@assignment.Disaster?.Title</td>
                    <td>@assignment.Location</td>
                    <td>@assignment.DateAssigned.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-3">No volunteer assignments available yet.</p>
}
